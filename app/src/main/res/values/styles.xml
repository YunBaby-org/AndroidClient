<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham</item>
        <item name="android:textSize">16sp</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowMoreItems</item>
    </style>

    <style name="WhiteActionBarTitle" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="OverflowMoreItems" parent="android:Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>
    </style>

</resources>